<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    android:layout_height="match_parent"
    tools:context=".basic_view_manager.AddFriends">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">





            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Name"
                android:id="@+id/textView6"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:textColor="@color/textColor"
                android:layout_alignParentStart="true"
                android:layout_marginTop="40dp" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Phone no."
                android:textColor="@color/textColor"
                android:id="@+id/textView7"
                android:layout_below="@+id/textView6"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="40dp" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Date Of Birth"
                android:id="@+id/textView8"
                android:layout_below="@+id/textView7"
                android:textColor="@color/textColor"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="40dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/name_text"
                android:layout_above="@+id/textView7"
                android:layout_toRightOf="@+id/textView6"
                android:layout_toEndOf="@+id/textView6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/phone_text"
                android:layout_above="@+id/textView8"
                android:layout_toRightOf="@+id/textView7"
                android:layout_toEndOf="@+id/textView7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/dob_text"
                android:layout_alignTop="@+id/textView8"
                android:layout_toRightOf="@+id/textView8"
                android:layout_toEndOf="@+id/textView8" />

            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:id="@+id/button2"
                android:background="@drawable/colorbutton"
                android:layout_marginTop="73dp"
                android:textColor="@color/button_color"
                android:layout_below="@+id/text_default"
                android:layout_toLeftOf="@+id/dob_text"
                android:layout_toStartOf="@+id/dob_text" />

            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:id="@+id/button3"
                android:layout_alignTop="@+id/button2"
                android:layout_alignParentRight="true"
                android:background="@drawable/colorbutton"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:textColor="@color/button_color"
                android:layout_marginEnd="56dp"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="SMS"
                android:textColor="@color/textColor"
                android:id="@+id/textView13"
                android:layout_below="@+id/textView8"
                android:layout_marginTop="40dp"


                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView24"
                android:textAppearance="?android:attr/textAppearanceLarge"


                android:text="Large Text"
                android:layout_alignTop="@+id/textView13"
                android:layout_toRightOf="@+id/button2"
                android:layout_toEndOf="@+id/button2" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Default SMS"
                android:id="@+id/text_default"
                android:textColor="@color/textColor"
                android:layout_below="@+id/textView13"
                android:layout_marginTop="40dp"


                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_default_ans"
                android:textAppearance="?android:attr/textAppearanceLarge"


                android:text="Large Text"

                android:layout_above="@+id/button2"
                android:layout_alignLeft="@+id/textView24"
                android:layout_alignStart="@+id/textView24" />


            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switch1"
                android:checked="false"
                android:layout_alignTop="@+id/textView24"
                android:layout_toRightOf="@+id/textView24"
                android:layout_toEndOf="@+id/textView24"
                android:layout_marginLeft="10dp" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switch2"

                android:checked="false"
                android:layout_alignTop="@+id/text_default_ans"
                android:layout_toRightOf="@+id/text_default_ans"
                android:layout_toEndOf="@+id/text_default_ans"
                android:layout_marginLeft="10dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Custom SMS"
                android:background="@drawable/colorbutton"
                android:id="@+id/button7"
                android:layout_marginTop="18dp"
                android:layout_below="@id/button2"
                android:layout_alignParentBottom="true"
                android:textColor="@color/button_color"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
